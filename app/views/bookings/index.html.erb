<h1>My Bookings</h1>
<div class="container">
  <div class="row">
    <ul>
      <% current_user.bookings.each do |booking| %>
      <br>
        <div class="card">
        <%# <%= cl_image_tag @article.photos.first.key, height: 300px, width: fill, object-fit: cover; %>
          <img src="https://yachtshop.bluewateryachting.com/media/cache/app_shop_yacht_large_thumbnail/56/da/b2faecfaf01d3b7e74f66ecf8711.jpeg" />
          <div class="card-infos">
            <div>
              <h2><%= link_to "#{booking.yacht.name}", booking_path(booking) %></h2>
              <div class="short-disc">
                <p>start date: <%= booking.start_date %> |</p>
                <p>end date: <%= booking.end_date %> |</p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>

