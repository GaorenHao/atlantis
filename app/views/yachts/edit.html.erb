<h1>Update <%= @yacht.name %></h1>

<%= simple_form_for @yacht do |f| %>
  <%= f.input :name %>
  <%= f.input :length %>
  <%= f.input :capacity %>
  <%= f.input :description %>
  <%= f.input :crew %>
  <%= f.input :price_per_day %>
  <%= f.input :location %>
  <%= f.input :cabin %>
  <%= f.input :speed %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Update Yacht", class: "btn btn-primary" %>
<% end %>
