<div class="container">
  <div class="map map-index" style="width: 100%; height: 300px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  <div class="row">
    <% @yachts.each do |yacht| %>
    <div class="spacing col-lg-6 col-md-12 col-sm-12">
      <%= link_to yacht_path(yacht) do %>
      <div class="card">
        <% if yacht.photos.attached? %>
          <%= cl_image_tag yacht.photos.first.key %>
        <% else %>
          <img src="https://yachtshop.bluewateryachting.com/media/cache/app_shop_yacht_large_thumbnail/56/da/b2faecfaf01d3b7e74f66ecf8711.jpeg" />
        <% end %>
        <div class="card-infos">
          <div>
            <h2><%= yacht.name %></h2>
            <div class="short-desc">
              <p>Length: <%= yacht.length %> |</p>
              <p>Capacity: <%= yacht.capacity %> |</p>
              <p>Cabins: <%= yacht.cabin %> |</p>
              <p>Location: <%= yacht.location %></p>
            </div>
          </div>
        </div>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
